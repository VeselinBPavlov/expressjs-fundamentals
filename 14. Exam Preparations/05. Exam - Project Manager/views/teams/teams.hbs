<main>
 <h1>Teams</h1>
 {{#if currentUser.isAdmin}}
 <h3>Manage Users</h3>
<div class="form">
  <form action="/distribute-team" method="POST">
    <label>User</label>
    <select name="userId">
        {{#each users}}
        <option value="{{_id}}">{{firstName}} {{lastName}}</option>        
        {{/each}}
    </select>
    <label>Team</label>
    <select name="teamId">
        {{#each teams}}
        <option value="{{_id}}">{{name}}</option>        
        {{/each}}
    </select>
    <input type="submit" value="Distribute">
  </form>
</div>
 {{else}}
 <form class="search">
  <label>Seach: </label>
  <input type="text">
  <input type="submit" value="Search">
</form>
<div class="teams">
    {{#each teams}}
    <div class="team">
    <h2>{{name}}</h2>
    <div class="team-info">
      <h3>Members</h3>
      {{#each members}}
      <p>{{firstName}} {{lastName}}</p>
      {{else}}
      <p>Team has no members</p>
      {{/each}}
    </div>
    <div class="team-info">
      <h3>Projects</h3>
      {{#each projects}}
      <p>{{name}}</p>
      {{else}}
      <p>Team has no projects</p>
      {{/each}}      
    </div>
  </div>
    {{/each}}

 {{/if}}
</main>
