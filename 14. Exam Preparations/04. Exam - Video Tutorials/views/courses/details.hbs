<main>
    <div class="container">
        <h1 class="my-4">Course title : {{course.title}}
        </h1>
        <div class="row">
            <div class="col-md-8">
                <img class="img-fluid" src={{course.imageUrl}}  alt="{{course.title}}" />
            </div>
            <div class="col-md-4 text-center">
                <h3 class="my-3">Course Description</h3>
                <p>{{course.description}}</p>
                {{#if (isEnrolled course currentUser.id)}}
                <span class="badge badge-pill badge-success">enrolled</span>
                </div>
            </div>

                <h3 class="text-center">Lectures List</h3>

                <ul class="list-group">
                    {{#each course.lectures}}
                    <li class="list-group-item">
                        <h5 class="mb-1">{{title}}</h5>
                        <span class="float-right">
                            <a href="/play/{{_id}}"><button class="btn btn-secondary">Play</button></a>
                        </span>
                    </li>
                    {{else}}
                    <h2 style="text-align: center;">There is no lectures in this course!</h2>
                    {{/each}}
                </ul>
            </div>
                {{else}}
                <form id="enroll-form" action="/enroll/{{course._id}}/{{currentUser.id}}" method="post"></form>
                <a href="javascript:document.getElementById('enroll-form').submit()"><button type="button" class="btn btn-info">Enroll</button></a>
            </div>
        </div>
        
        <h4 class="text-center">To get full access please enroll the course</h4>
                {{/if}}                

    </div>
</main>       